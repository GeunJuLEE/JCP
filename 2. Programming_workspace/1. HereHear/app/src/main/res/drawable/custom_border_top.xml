<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp" android:right="0dp" android:left="0dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <margin
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
            <stroke android:width="2dp"
                android:color="@color/RecyclerView_border"/>
        </shape>
    </item>
</layer-list>



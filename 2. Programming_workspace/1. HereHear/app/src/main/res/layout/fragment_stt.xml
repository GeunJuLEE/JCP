<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SttFragment"
    android:paddingHorizontal="20dp">
<!--    android:paddingVertical="150dp">-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/SttFragment_ImageView_dictateImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
<!--            android:src="@drawable/text_box"/>-->

        <TextView
            android:id="@+id/SttFragment_TextView_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center_horizontal"
            android:text="번역 중..."
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FF6868"/>

        <TextView
            android:id="@+id/SttFragment_TextView_dictatedText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="100dp"
            android:text=""
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textSize="15sp" />

    </FrameLayout>


</FrameLayout>